{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/webhooks/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/health",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "GITHUB_APP_ID": "@github_app_id",
    "GITHUB_WEBHOOK_SECRET": "@github_webhook_secret",
    "ANTHROPIC_API_KEY": "@anthropic_api_key",
    "STRIPE_SECRET_KEY": "@stripe_secret_key",
    "DATABASE_URL": "@database_url"
  }
}
